<configuration debug="false">
    <!--  ==================================================  -->
    <!--  ========== تنظیمات خروجی کنسول با رنگ ==========  -->
    <!--  ==================================================  -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight([%thread]){STYLE=Bold} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>
    <!--  ==================================================  -->
    <!--  1. HikariCP: Pool و Connection lifecycle  -->
    <!--  ==================================================  -->
    <logger name="com.zaxxer.hikari" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.zaxxer.hikari.pool.PoolBase" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.zaxxer.hikari.pool.ProxyLeakTask" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!--  ==================================================  -->
    <!--  2. Hibernate: EntityManager و Session  -->
    <!--  ==================================================  -->
    <logger name="org.hibernate.jpa.internal.EntityManagerFactoryImpl" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.internal.SessionFactoryImpl" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.internal.SessionImpl" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!--  ==================================================  -->
    <!--  3. Connection Provider: Hibernate ↔ HikariCP  -->
    <!--  ==================================================  -->
    <logger name="org.hibernate.engine.jdbc.connections" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.engine.jdbc.spi" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.engine.jdbc.internal.JdbcCoordinatorImpl" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!--  ==================================================  -->
    <!--  4. Transaction  -->
    <!--  ==================================================  -->
    <logger name="org.hibernate.engine.transaction" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.engine.transaction.internal.TransactionImpl" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!--  ==================================================  -->
    <!--  5. SQL + Bind Parameters  -->
    <!--  ==================================================  -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.type.descriptor.sql" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!--  ==================================================  -->
    <!--  6. Root: INFO برای کد خودت  -->
    <!--  ==================================================  -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>